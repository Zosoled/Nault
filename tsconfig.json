{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "typeRoots": [
      "node_modules/@types",
      "./src/typings"
    ],
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ES2020",
    "baseUrl": "./",
    "paths": {
      "stream": ["../node_modules/readable-stream/readable.js"]
    }
  }
}